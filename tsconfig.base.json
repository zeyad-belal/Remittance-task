

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "react",
      "react-native",
      "expo",
      "expo-router"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@db/*": ["db/*"],
      "@sync/*": ["sync/*"],
      "@features/*": ["features/*"],
      "@security/*": ["security/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build"]
}