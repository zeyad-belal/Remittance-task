{
  "expo": {
    "name": "Remittance-app",
    "slug": "Remittance-app",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0A7",
          "sounds": ["./assets/default.wav"]
        }
      ],
      [
        "expo-sqlite",
        { "enableFTS": true, "useSQLCipher": true }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "useFrameworks": "static",
      "bundleIdentifier": "com.yourco.remit",
      "infoPlist": {
        "UIBackgroundModes": ["fetch", "remote-notification"]
      },
      "customBuildFlags": ["-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourco.remit"
    }
  }
}
